<h1>My Items</h1>
<div id="merchant_items">
  <ul>
  <% @items.each do |item| %>
    <div id = "merchant_item-<%=item.id%>"> 
      <li><%= link_to item.name, "/merchants/#{@merchant.id}/items/#{item.id}" %></li>
      <% if item.status == "Enabled" %>
        <%=button_to "Disable", "/merchants/#{@merchant.id}/items/#{item.id}", method: :patch, params: {item:{ status: "Disabled"} } %>
      <% else %>
        <%=button_to "Enable", "/merchants/#{@merchant.id}/items/#{item.id}", method: :patch, params: {item:{ status: "Enabled"} } %>
      <% end %>
    </div>
  <% end %>
  </ul>
</div>
<h3>Enabled Items</h3>
<div id="enabled">
  <ul>
    <% @enabled_items.each do |enabled| %>
      <li><%= enabled.name %></li>
    <% end %>
  </ul>  
</div>

<h3>Disabled Items</h3>
<div id="disabled">
  <ul>
    <% @disabled_items.each do |disabled| %>
      <li><%= disabled.name %></li>
    <% end %>
  </ul>
</div>
<p><%= link_to "Create New Item", "/merchants/#{@merchant.id}/items/new" %></p>