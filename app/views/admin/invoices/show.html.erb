<%= render partial: 'partials/admin_invoice_nav_bar' %>

<div class="body_container">
  <div class="sub_container">
    <div class="sub_header"><%= "Invoice ##{@invoice.id}" %></div>
    <p><%= "Status: #{@invoice.status}" %></p>
    <p><%= "Created on: #{@invoice.created_at.strftime("%A, %B %-d, %Y")}" %></p>
    <h4>Customer:</h4>
    <p><%= "#{@invoice.customer.first_name} #{@invoice.customer.last_name}" %></p>
  </div>
</div>

<h4> Items on this invoice: </h4>
<table> 
  <tr>
    <th> Item Name </th>
    <th> Quantity </th>
    <th> Unit Price </th>
    <th> Status </th>
  </tr>
  <% @invoice.invoice_items_and_names.each do |item| %>
    <div id = <%= "invoice_item-#{item.id}" %>>
      <tr>
        <td> <%= item.name %> </td>
        <td> <%= item.quantity %> </td>
        <td> <%= number_to_currency(item.unit_price.to_f / 100) %> </td>
        <td> <%= item.status %> </td>
      </tr>
    <div>
  <%end%>
</table>